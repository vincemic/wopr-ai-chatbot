{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "🌐 Launch Frontend (Angular Dev Server)",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "start-frontend-dev",
            "program": "${workspaceFolder}/frontend/wopr-frontend/node_modules/.bin/ng",
            "args": ["serve", "--host", "localhost", "--port", "4200"],
            "cwd": "${workspaceFolder}/frontend/wopr-frontend",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            },
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "🌐🔍 Debug Frontend in Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/frontend/wopr-frontend/src",
            "sourceMaps": true,
            "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-profile",
            "runtimeArgs": [
                "--disable-web-security",
                "--disable-features=VizDisplayCompositor"
            ]
        },
        {
            "name": "🧪 Run Playwright Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/frontend/wopr-frontend/node_modules/.bin/playwright",
            "args": ["test"],
            "cwd": "${workspaceFolder}/frontend/wopr-frontend",
            "console": "integratedTerminal",
            "env": {
                "CI": "true"
            }
        },
        {
            "name": "🧪 Debug Playwright Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/frontend/wopr-frontend/node_modules/.bin/playwright",
            "args": ["test", "--debug"],
            "cwd": "${workspaceFolder}/frontend/wopr-frontend",
            "console": "integratedTerminal",
            "env": {
                "PWDEBUG": "1"
            }
        }
    ],
    "compounds": [
        {
            "name": "🌐� Launch Frontend with Debug",
            "configurations": [
                "🌐 Launch Frontend (Angular Dev Server)",
                "🌐🔍 Debug Frontend in Chrome"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "WOPR Frontend",
                "order": 1
            }
        }
    ]
}