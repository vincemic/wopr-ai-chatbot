{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start-frontend-dev",
            "type": "shell",
            "command": "npm",
            "args": ["start"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/frontend/wopr-frontend"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                {
                    "base": "$tsc-watch",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^.*Application bundle generation.*$",
                        "endsPattern": "^.*Compiled successfully\\.$|^.*webpack compiled.*$|^.*âœ“ Compiled successfully\\.$"
                    }
                }
            ],
            "isBackground": true,
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "build-frontend",
            "type": "shell",
            "command": "npm",
            "args": ["run", "build"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/frontend/wopr-frontend"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$tsc", "$eslint-stylish"]
        },
        {
            "label": "build-frontend-prod",
            "type": "shell",
            "command": "npm",
            "args": ["run", "build:prod"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/frontend/wopr-frontend"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$tsc", "$eslint-stylish"]
        },
        {
            "label": "build-frontend-github",
            "type": "shell",
            "command": "npm",
            "args": ["run", "build:github"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/frontend/wopr-frontend"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$tsc", "$eslint-stylish"]
        },
        {
            "label": "install-frontend-deps",
            "type": "shell",
            "command": "npm",
            "args": ["install"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/frontend/wopr-frontend"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "test-playwright",
            "type": "shell",
            "command": "npm",
            "args": ["run", "test:e2e"],
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}/frontend/wopr-frontend"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "test-playwright-ui",
            "type": "shell",
            "command": "npx",
            "args": ["playwright", "test", "--ui"],
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}/frontend/wopr-frontend"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "install-playwright",
            "type": "shell",
            "command": "npx",
            "args": ["playwright", "install"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/frontend/wopr-frontend"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}